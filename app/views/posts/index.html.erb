<h1>Bothered at UChicago</h1>

<table class="all-posts">
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Description</th>
      <th>Likes</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.likes %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "edit button" %> |
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "delete button"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Post', new_post_path, class: 'new button' %>
